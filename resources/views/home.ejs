<!-- will be a html file although extension .ejs -->
<section class="hero py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-lg"><em>Isn't it tempting?</em></h6>
      <h1 class="text-3xl md:text-6xl font-bold">Dont Wait</h1>
      <button
        class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4"
      >
        Order Now
      </button>
    </div>
    <div class="w-1/2">
      <img src="/img/hero-pizza.png" alt="Hero Image" srcset="" />
    </div>
  </div>
</section>
<section class="menu container mx-auto py-8">
  <h1 class="text-lg font-bold mb-8">Delicious Pizzas</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-16"> <!--md, lg are tailwind css breakpoint speicifying min-width media query, refer docs-->
    <% pizzas.forEach(function(pizzaitem){%>  <!--ejs template engine tags which is a javascript, pizzaitem here is the iterating variable which contains the data of each pizzaiitem-->
    <div>
      <div class=" w-full md:w-64 text-center">
        <img
          class="h-40 mb-4 mx-auto"
          src="/img/<%= pizzaitem.image %>"
          alt="Pizza image"
          srcset=""
        />
        <div>
          <h2 class="mb-4 text-lg"><%= pizzaitem.name%></h2>
          <span class="size py-1 px-4 rounded-full uppercase text-s"
            ><%= pizzaitem.size%></span
          >
          <div class="flex items-center justify-around mt-6">
            <span class="font-bold text-lg">â‚¹<%= pizzaitem.price%></span>
            <button data-pizza="<%= JSON.stringify(pizzaitem)%>"
              class="addToCart px-6 py-1 rounded-full flex items-center font-bold"
            >
              <span> + Add </span>
            </button><!-- here data-pizza is a data attribute where pizza is the name given to pizza attribute-->
          </div>
        </div>
      </div>
    </div>
    <%})%> <!--clsoing tag for the ejs script-->
  </div>
</section>
